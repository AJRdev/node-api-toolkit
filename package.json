{
  "name": "node-api-toolkit",
  "private": true,
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^11.9.4",
    "gitbook-cli": "^2.3.2",
    "lerna": "^3.13.0",
    "prettier": "^1.16.4",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "yarn install --pure-lockfile && lerna bootstrap",
    "build": "lerna run tsc",
    "fmt": "prettier --color --write \"packages/*/**/*.{js,ts,yml,yaml}\" README.md \"packages/*/README.md\" tsconfig.json \"packages/*/tsconfig.json\"",
    "publish": "lerna run tsc && lerna publish",
    "doc:serve": "gitbook serve",
    "doc:build": "gitbook build"
  }
}
